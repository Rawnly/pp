{
  "name": "ppj",
  "version": "1.0.4",
  "description": "Pretty print JSON`",

  "author": "Federico Vitale (hi@fedevitale.dev) <https://fedevitale.dev>",
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "prebuild": "babel src -d build --extensions '.ts,.js'",
    "build": "pkg build/index.js -o=dist/ppj",
    "postbuild": "rimraf build"
  },
  "bin": {
    "ppj": "./src/index.js"
  },
  "keywords": [
